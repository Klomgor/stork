$TTL 2d
$ORIGIN 0.0.10.in-addr.arpa.

@       IN      SOA     ns1.pdns.example.com. admin.pdns.example.com. (
                        2024031501      ; Serial
                        12h             ; Refresh
                        15m             ; Retry
                        3w              ; Expire
                        2h )            ; Minimum TTL

        IN      NS      ns1.pdns.example.com.
        IN      NS      ns2.pdns.example.com.

; Static PTR records
2       IN      PTR     ns1.pdns.example.com.
3       IN      PTR     ns2.pdns.example.com.
4       IN      PTR     mail.pdns.example.com.
5       IN      PTR     www.pdns.example.com.